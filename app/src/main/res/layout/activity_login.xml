<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/skatepark"
    tools:context="com.example.arpoga.skattebattle.LoginActivity">

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="SKATE BATTLE"
        android:textColor="#000000"
        android:textSize="30dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="427dp"
            android:layout_height="386dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/skatekepsar" />

        <ImageView
            android:layout_width="201dp"
            android:layout_height="77dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/logovhs" />

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
        android:layout_marginTop="150dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_Registrar"
                android:textColor="#FFFFFF"
                android:text="Registrer Now"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView_Login"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="120dp"
                android:text="Login"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

</LinearLayout>
